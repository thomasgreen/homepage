---
import { Image } from "astro:assets";
import ProfileImage from "../me_updated.jpeg";
import { Icon } from "astro-icon/components";
const skills: string[] = [
  "PHP",
  "Laravel",
  "MySQL",
  "PostgreSQL",
  "PHPUnit",
  "Pest",
  "JS (ES5 & ES6)",
  "Vue.js",
  "Typescript",
  "Livewire",
  "Inertia",
  "CSS 3",
  "Tailwind CSS",
  "Docker",
  "Git",
  "Jira",
];
---

<section
  class="container mx-auto mt-4 flex max-w-7xl flex-col items-center justify-center gap-16 px-2 pt-2 lg:flex-row lg:gap-32 lg:p-0"
>
  <div class="flex flex-col items-start gap-8">
    <h1 class="text-5xl font-bold text-white">
      Hello, I'm <span
        class="bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent"
        >Tom Green</span
      >
    </h1>
    <div class="flex flex-wrap gap-2">
      {
        skills.map((skill) => (
          <span class="inline-flex select-none items-center rounded-lg bg-slate-700 py-1.5 pe-4 ps-4 text-sm text-white">
            {skill}
          </span>
        ))
      }
    </div>
    <div class="flex gap-4">
      <a
        href="mailto:me@tomgreen.dev"
        class="flex w-auto items-center gap-2 rounded-md bg-white px-4 py-2 text-gray-900 transition ease-linear hover:bg-white/80"
      >
        Get in touch

        <Icon name="ri:mail-send-fill" />
      </a>
      <a
        href="/thomas_green_cv.pdf"
        rel="noopener"
        target="_blank"
        class="flex w-auto items-center gap-2 rounded-md bg-white px-4 py-2 text-gray-900 transition ease-linear hover:bg-white/80"
        >Download CV

        <Icon name="ri:file-download-fill" />
      </a>
    </div>
  </div>
  <Image
    src={ProfileImage}
    width="400"
    loading="eager"
    alt="Tom Green"
    class="rounded-3xl"
  />
</section>
